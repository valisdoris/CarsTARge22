@model CarsTARge22.Models.Cars.CarDeleteViewModel

<h1>Delete</h1>

<div>
    <h4>Cars</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-lable"></label>
            @Html.DisplayFor(model => model.Id)
        </div>
        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-lable"></label>
            @Html.DisplayFor(model => model.Brand)
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-sm-2 col-form-lable"></label>
            @Html.DisplayFor(model => model.Type)
        </div>
        <div class="form-group row">
            <label asp-for="Year" class="col-sm-2 col-form-lable"></label>
            @Html.DisplayFor(model => model.Year)
        </div>        
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-lable"></label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-lable"></label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>

    </dl>


    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="cars" class="btn btn-sucess">Back</a>
    </form>
</div>
